/* vim: set ft=jsonc: */

{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "checkJs": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "baseUrl": "./",
        "paths": {
            "#conf/*": ["src/conf/*"],
            "#commons/*":[ "src/commons/*" ],
            "#modules/*": ["src/modules/*"],
            "#root-store/*": ["src/store/*"],
        },
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
